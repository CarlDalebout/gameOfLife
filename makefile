#==========================================================
# Makefile for main.exe
# Carl Dalebout
#==========================================================

#==========================================================
# Macros
#==========================================================
CXX 			= g++
CXXFLAGS	= -g -Wall
LINK			= g++
LINKFLAGS	= -lGL -lGLU -lglut -lGLEW
OBJS			= ../ciss380/a/mygllib/config.o \
						../ciss380/a/mygllib/View.o \
						main.Object
EXE				= main.exe

#==========================================================
# Executable
#==========================================================
$(EXE):		$(OBJS)
	$(LINK) $(OBJS) -o $(EXE) $(LINKFLAGS)

#==========================================================
# Object files
#==========================================================
main.o: 	main.cpp
	$(CXX) $(CXXFLAGS) main.cpp -c -o main.o -I ../ciss380/a/mygllib/

#==========================================================
# Utilities
#==========================================================
clean:
	rm -f $(EXE) main.Object
c:
	rm -f $(EXE) main.Object
run:
	./$(EXE)
r:
	./$(EXE)